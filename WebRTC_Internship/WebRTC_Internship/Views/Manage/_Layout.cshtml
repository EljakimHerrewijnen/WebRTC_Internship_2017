@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Manage your account</h2>

<div>
    <h4>Change your account settings</h4>
    <hr />
    <div class="row">
        <div class="col-md-3">
            @await Html.PartialAsync("_ManageNav")
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

<div>
    <form method="post" enctype="multipart/form-data" asp-controller="Contact" asp-action="Uploadfile">
        <div class="form-group">
            <div class="col-md-10">
                <p>Zet uw profielfoto online! </p>
                <input type="file" name="files" multiple accept="img/jpg" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Zet deze foto online" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}

